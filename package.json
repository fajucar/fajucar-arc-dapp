{
  "name": "gift-card-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "env:create": "node scripts/create-env-simple.cjs",
    "env:test": "node scripts/test-env.cjs",
    "check:env": "node scripts/check-vite-env.mjs",
    "setup:env": "node scripts/create-env-file.cjs",
    "fix:env": "node scripts/fix-env.cjs",
    "verify:env": "node scripts/verificar-tudo.cjs",
    "test:complete": "node scripts/teste-completo.js",
    "prepare:dev": "node scripts/verificar-tudo.cjs",
    "restart": "node scripts/fix-env.cjs",
    "frontend:dev": "npm run dev",
    "frontend:build": "npm run build",
    "frontend:preview": "npm run preview -- --host --port 4173",
    "contracts:compile": "node scripts/check-contracts.cjs && npm --prefix contracts run compile || echo Contracts not configured",
    "contracts:export-abis": "node scripts/check-contracts.cjs && npm --prefix contracts run export-abis || echo Contracts not configured",
    "contracts:compile-and-export": "node scripts/check-contracts.cjs && npm --prefix contracts run compile-and-export || echo Contracts not configured. Run 'npm run contracts:setup' to create contracts folder.",
    "debug:logs": "tsx scripts/debug-logs.ts",
    "test:mint-logs": "tsx scripts/test-mint-logs.ts",
    "arc:check": "node scripts/check-arc.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "clsx": "^2.1.1",
    "ethers": "^6.9.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.560.0",
    "react": "^18.2.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "viem": "^2.42.1",
    "wagmi": "^3.1.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.21.0",
    "typescript": "^5.2.2",
    "vite": "^5.4.21"
  }
}
